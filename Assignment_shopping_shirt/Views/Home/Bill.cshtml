@model IEnumerable<Assignment_shopping_shirt.Models.Bill>

@{
    ViewData["Title"] = "Bill";
}

<h1>Bill</h1>

<p>
    <a asp-action="CreateBill">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditBill", new { id=item.Id  }) |
                    @Html.ActionLink("Details", "DetailBill", new { id=item.Id  }) |
                    @Html.ActionLink("Delete", "DeleteBill", new { id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
