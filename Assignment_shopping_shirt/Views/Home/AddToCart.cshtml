@model IEnumerable<Assignment_shopping_shirt.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<p>
    <a asp-action="CreateCart">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCart", new {id=item.UserId }) |
                    @Html.ActionLink("Details", "DetailCart", new {id=item.UserId }) |
                    @Html.ActionLink("Delete", "DeleteCart", new {id=item.UserId })
                </td>
            </tr>
        }
    </tbody>
</table>
